{
  "name": "ESP-IDF DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "idf.espIdfPath": "/opt/esp/idf",
        "idf.toolsPath": "/opt/esp",
        "idf.gitPath": "/usr/bin/git"
      },
      "extensions": [
        "espressif.esp-idf-extension",
        "ms-vscode.cpptools"
      ]
    }
  },
  "runArgs": ["--privileged"]
}