{
  "configurations": [
    {
      "name": "ESP-IDF",
      "compilerPath": "/opt/esp/tools/xtensa-esp32s3-elf/bin/xtensa-esp32s3-elf-gcc",
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "includePath": [
        "${workspaceFolder}/**",
        "/opt/esp/idf/components/**"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}",
          "/opt/esp/idf/components"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}